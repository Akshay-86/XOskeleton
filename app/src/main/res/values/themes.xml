<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BasicBluetoothApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="appBackground">@color/white</item>
        <item name="viewBackground">@color/light_primary_40</item>
        <item name="stringColor">@color/light_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?viewBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:targetApi="35">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>


    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?viewBackground</item>
    </style>
    <style name="RoundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>



    <style name="Theme.BasicBluetoothApp" parent="Base.Theme.BasicBluetoothApp" />
    <style name="BottomNavTextActive">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="BottomNavTextInactive">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ModernSlider" parent="Widget.MaterialComponents.Slider">
        <item name="thumbColor">#00E5FF</item>
        <item name="trackColorActive">#00E5FF</item>
        <item name="trackColorInactive">#555555</item>
        <item name="trackHeight">16dp</item>
        <item name="thumbRadius">10dp</item>
        <item name="haloColor">#3300E5FF</item>
        <item name="labelStyle">@empty</item>
    </style>

    <style name="ModeButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_mode_button</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
